<%= session[:current_user_id] %>
<div class="col-md-10" style="padding:30px; background-color:skygrey">
  <div class="row">
    <div class="col-md-12">
      <h2>Add New Product</h2>
    </div>
    <div class="col-md-6" style="margin-top:30px">
    <% c=0 %>
    <% s=0 %>
      <%= form_for :addProduct, url: new_category_subcategory_product_path(:categories_id,:subcategories_id), method: 'get' do |p| %>
        <div class="form-group col-md-12">
         <%= p.label "Your Id:" %>
        <% buyers_id = session[:current_user_id] %>
         <%= p.number_field :buyers_id, :value => buyers_id %>
         </div>
        <div class="form-group col-md-6">
          <%= p.label "Category:" %>
          <%= p.select(:categories_id, options_for_select([
            [1],
            [2],
            [3],
            [4],
            [5],
            [6],
            [7]
            ])) %>
          </div> 
          <div class="form-group col-md-6">
          <%= p.label "Sub Category:" %>
          <%= p.select(:subcategories_id, options_for_select([
            [49],
            [55],
            [61],
            [64],
            [65],
            [70],
            [73]
            ])) %>
          <!-- <label>Sub Category: </label>
          <select class="form-control">
            <option>Select Sub Category</option>
            <option>Kictchen and Dining</option>
            <option>Mens</option>
            <option>Womens</option>
            <option>Home Decorators</option>
          </select> -->
        </div>
          <!-- <label>Brand Name: </label>
          <select class="form-control">
            <option>Select Brand Name:</option>
            <option>Samsung</option>
            <option class="active">LG</option>
            <option>NOKIA</option>
            <option>QMOBILE</option>
          </select> -->
        </div> 
        <div class="form-group col-md-12">
         <%= p.label "Product Name:" %>
         <%= p.text_field :product_name, :placeholder => "Product Name", :class => "form-control",required: :true %>
        <!--   <label>Product Name: </label>
          <input type="text" placeholder="Product Name" class="form-control" required>
         --></div>
        <div class="form-group col-md-4">
         <label>Price: US $</label>
         <%= p.number_field :product_price, :placeholder => "Price", :class => "form-control", required: :true, :min => "0" %>
         <!--  <label>Product Price: </label>
          <input type="text" placeholder="Price" class="form-control" required>
        --> </div>
        <div class="form-group col-md-4">
         <%= p.label "Quantity:" %>
         <%= p.number_field :quantity, :placeholder => "Quantity", :class => "form-control",required: :true, :min => "1", :max => "200" %>
    <!--       <label>Quantity: </label>
          <input type="number" min="1" max="200" class="form-control" required>
     -->    </div>
        <div class="form-group col-md-4">
         <%= p.label "Item Condition:" %>
         <%= p.select(:item_condition, options_for_select([
          ['New']
          ])) %>
        <!-- 
          <label>Item Condition: </label>
          <select class="form-control">
            <option>New</option>
          </select> -->
        </div>
        <div class="form-group col-md-6">
        <%= p.label "Pic 1:" %>
         <%= p.file_field :pic_1, :accept => "image/*", required: :true %>
       <!--    <label>Pic 1: </label>
          <input type="file" accept="image/*">
        --> </div>
        <div class="form-group col-md-6">
        <%= p.label "Pic 2:" %>
         <%= p.file_field :pic_2, :accept => "image/*", required: :true %>
            <!-- <label>Pic 2: </label>
            <input type="file" accept="image/*"> -->
        </div>
        <div class="form-group col-md-6">
        <%= p.label "Pic 3(Optional):" %>
         <%= p.file_field :pic_3, :accept => "image/*" %><!-- 
          <label>Pic 3(Optional): </label>
          <input type="file" accept="image/*"> -->
        </div>
        <div class="form-group col-md-6">
        <%= p.label "Pic 4(Optional):" %>
         <%= p.file_field :pic_4, :accept => "image/*" %><!-- 
          <label>Pic 4(Optional): </label>
          <input type="file" accept="image/*"> -->
        </div>
        <div class="form-group col-md-12">
        <%= p.label "Upload Demo Video(Optional):" %>
         <%= p.file_field :demo_video, :accept => "video/*" %><!-- 
          <label>Upload Demo Video(Optional): </label>
          <input type="file" accept="video/*"> -->
        </div>
        <div class="col-md-2">
          <%= p.submit "Add Product", :class => "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>